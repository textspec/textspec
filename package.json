{
  "name": "textspec",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:browser": "turbo test:browser",
    "test:browser:chromium": "turbo test:browser:chromium",
    "test:browser:firefox": "turbo test:browser:firefox",
    "test:browser:webkit": "turbo test:browser:webkit",
    "test:coverage": "turbo test:coverage",
    "test:watch": "turbo test:watch",
    "check:format": "prettier . --check",
    "check:lint": "turbo check:lint",
    "check:types": "turbo check:types",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --cache --write .",
    "format:staged": "pretty-quick --staged",
    "postinstall": "husky",
    "release": "pnpm build && changeset publish"
  },
  "lint-staged": {
    "*": [
      "pnpm format:staged"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@playwright/test": "^1.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-gherkin": "^3.1.3",
    "pretty-quick": "^4.2.2",
    "turbo": "^2.7.2"
  },
  "packageManager": "pnpm@10.25.0"
}
