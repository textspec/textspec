{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":dependencyDashboardApproval"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "semanticCommitType": "chore"
    },
    {
      "matchDepTypes": ["dependencies"],
      "semanticCommitType": "fix"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Group @textspec packages",
      "groupName": "textspec",
      "matchPackageNames": ["/^@textspec//"]
    },
    {
      "description": "Group @sanity packages",
      "groupName": "sanity",
      "matchPackageNames": ["/^@sanity//"]
    },
    {
      "description": "Group Vitest packages",
      "groupName": "vitest",
      "matchPackageNames": ["/^vitest/", "/^@vitest//"]
    },
    {
      "description": "Group Playwright packages",
      "groupName": "playwright",
      "matchPackageNames": ["/^@playwright//", "/^playwright/"]
    },
    {
      "description": "Group Changesets packages",
      "groupName": "changesets",
      "matchPackageNames": ["/^@changesets//"]
    },
    {
      "description": "Group Prettier packages",
      "groupName": "prettier",
      "matchPackageNames": ["/^prettier/", "/^@ianvs/prettier/"]
    }
  ]
}
