{
  "name": "@textspec/notation",
  "version": "1.0.0",
  "description": "Parser and serializer for the Textspec editor state notation",
  "keywords": [
    "text-editing",
    "parser",
    "editor-state",
    "notation"
  ],
  "license": "MIT",
  "author": "Christian Gr√∏ngaard <christian@groengaard.dk>",
  "repository": {
    "type": "git",
    "url": "https://github.com/textspec/textspec.git",
    "directory": "packages/notation"
  },
  "homepage": "https://github.com/textspec/textspec#readme",
  "bugs": {
    "url": "https://github.com/textspec/textspec/issues"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkg-utils build --strict --check --clean",
    "check:lint": "biome lint .",
    "check:types": "tsc",
    "check:types:watch": "tsc --watch",
    "clean": "del .turbo && del dist && del node_modules",
    "dev": "pkg-utils watch",
    "lint:fix": "biome lint --write .",
    "prepublishOnly": "turbo run build",
    "test": "vitest --run",
    "test:unit": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@sanity/browserslist-config": "^1.0.5",
    "@sanity/pkg-utils": "^10.2.5",
    "@sanity/tsconfig": "^2.1.0",
    "@vitest/coverage-v8": "^4.0.16",
    "del-cli": "^7.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.19 <22 || >=22.12"
  },
  "browserslist": "extends @sanity/browserslist-config",
  "publishConfig": {
    "exports": {
      ".": "./dist/index.js",
      "./package.json": "./package.json"
    }
  }
}
